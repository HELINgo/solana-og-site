{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    // 静态资源优先
    { "handle": "filesystem" },
    // /api 下的请求走函数
    { "src": "/api/(.*)", "dest": "api/$1.ts" },
    // 其余全部返回 index.html（SPA fallback）
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
